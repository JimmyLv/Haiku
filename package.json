{
  "name": "Haiku",
  "version": "1.0.0",
  "description": "A powerful rich interactive web application by using nobackend tech stack.",
  "main": "./src/index.jsx",
  "scripts": {
    "clean": "rm -rf public && rm -rf _site",
    "serve": "webpack-dev-server",
    "build:pwa": "cp favicon.ico cache-polyfill.js public/ && sw-precache --navigate-fallback='index.html' --root='public/' --static-file-globs='public/**/!(*map*)'",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --colors --hide-modules && npm run build:pwa",
    "build:stats": "webpack --profile --json > stats.json",
    "build": "npm run clean && npm run build:webpack",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/. --ext .jsx --ext .js; exit 0",
    "lint:fix": "eslint --fix src/. --ext .jsx --ext .js; exit 0",
    "test": "karma start --single-run=true",
    "test:codecov": "cat coverage/*/lcov.info | codecov",
    "deploy:cdn": "cd scripts && ./qrsync-v2 conf.json",
    "deploy:prod": "npm run fix && npm run test && npm run build && npm run cdn",
    "start": "npm run clean && npm run build && jekyll serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimmyLv/Haiku"
  },
  "homepage": "http://haiku.jimmylv.info/",
